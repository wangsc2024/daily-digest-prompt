{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "strategy", "same_day_dedup", "cross_day_priority", "history_size", "habits_topics", "learning_topics"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "strategy": {
      "type": "string",
      "enum": ["no_repeat_until_all_used", "round_robin", "random"]
    },
    "same_day_dedup": {
      "type": "boolean"
    },
    "cross_day_priority": {
      "type": "string",
      "enum": ["least_recently_used", "most_recently_used", "random"]
    },
    "history_size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "habits_topics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "learning_topics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
