{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "ranges", "dimensions"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "ranges": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["min", "label", "stars"],
        "properties": {
          "min": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "stars": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          }
        }
      }
    },
    "dimensions": {
      "type": "object",
      "required": ["success_rate", "error_rate", "blocked_events", "cache_hit_rate", "duration_stability", "streak_continuity"],
      "properties": {
        "success_rate": {
          "$ref": "#/definitions/dimension"
        },
        "error_rate": {
          "$ref": "#/definitions/dimension"
        },
        "blocked_events": {
          "$ref": "#/definitions/dimension"
        },
        "cache_hit_rate": {
          "$ref": "#/definitions/dimension"
        },
        "duration_stability": {
          "$ref": "#/definitions/dimension"
        },
        "streak_continuity": {
          "$ref": "#/definitions/dimension"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "dimension": {
      "type": "object",
      "required": ["weight", "description"],
      "properties": {
        "weight": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
