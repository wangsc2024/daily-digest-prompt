{
  "hooks": {
    "PreToolUse": [
      { "matcher": "Bash", "hooks": [{ "type": "command", "command": "python D:/Source/daily-digest-prompt/hooks/pre_bash_guard.py" }] },
      { "matcher": "Write", "hooks": [{ "type": "command", "command": "python D:/Source/daily-digest-prompt/hooks/pre_write_guard.py" }] },
      { "matcher": "Edit", "hooks": [{ "type": "command", "command": "python D:/Source/daily-digest-prompt/hooks/pre_write_guard.py" }] },
      { "matcher": "Read", "hooks": [{ "type": "command", "command": "python D:/Source/daily-digest-prompt/hooks/pre_read_guard.py" }] }
