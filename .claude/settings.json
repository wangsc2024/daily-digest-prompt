    "PostToolUse": [
      { "hooks": [{ "type": "command", "command": "python D:/Source/daily-digest-prompt/hooks/post_tool_logger.py" }] },
      { "matcher": "Write", "hooks": [{ "type": "command", "command": "python D:/Source/daily-digest-prompt/hooks/cjk_guard.py post-fix" }] },
